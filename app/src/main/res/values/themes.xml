<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WoowahanRepo" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/black_111723</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="issueFilterPopupMenu" parent="@style/Widget.MaterialComponents.PopupMenu.Overflow">
        <item name="android:popupBackground">@drawable/bg_popup_menu_issue_filter</item>
        <item name="android:textColor">@color/color_text_selector_issue_filter</item>

        <item name="android:dropDownHorizontalOffset">20dp</item>
        <item name="android:dropDownVerticalOffset">50dp</item>

        <item name="android:layout_marginEnd">-8dp</item>

        <item name="colorSecondary">@color/white</item>

        <!-- checkableBehavior:single 일때 나오는 radioButton 디자인 변경
         https://developer.android.com/reference/android/R.attr#listChoiceIndicatorSingle -->
        <item name="android:listChoiceIndicatorSingle">@drawable/ic_selector_menu_issue_filter</item>
        <!-- checkableBehavior:all 일때 나오는 checkBox 디자인 변경 -->
        <item name="android:listChoiceIndicatorMultiple">@drawable/ic_selector_menu_issue_filter</item>
    </style>

</resources>